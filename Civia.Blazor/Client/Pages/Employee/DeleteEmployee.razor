@page "/employee/delete/{empId}"
@inject HttpClient Http
@inject Microsoft.AspNetCore.Components.NavigationManager navigation

<h2>Suppression</h2>
<h3>Comfirmez-vous la suppresion de l'employée avec l'id : @empId</h3>
<br />

<div class="col-md-4">
    <table class="table">
        <tr>
            <td>Nom</td>
            <td>@emp.Name</td>
        </tr>
        <tr>
            <td>Fonction</td>
            <td>@emp.Designation</td>
        </tr>
        <tr>
            <td>Email</td>
            <td>@emp.Email</td>
        </tr>
        <tr>
            <td>Adresse</td>
            <td>@emp.Location</td>
        </tr>
        <tr>
            <td>Téléphone</td>
            <td>@emp.PhoneNumber</td>
        </tr>
    </table>
    <div class="form-group">
        <input type="submit" value="Supprimer" @onclick="@(async () => await Delete())" class="btn btn-default" />
        <input type="submit" value="Annuler" @onclick="@Cancel" class="btn" />
    </div>
</div>

@code {
    [Parameter]
    public string empId { get; set; }

    Employee emp = new Employee();

    protected override async Task OnInitializedAsync()
    {
        emp = await Http.GetFromJsonAsync<Employee>("api/Employee/" + Convert.ToInt64(empId));
    }

    protected async Task Delete()
    {
        await Http.DeleteAsync("api/Employee/" + Convert.ToInt64(empId));
        navigation.NavigateTo("/employee");
    }

    void Cancel()
    {
        navigation.NavigateTo("/employee");
    }
}
